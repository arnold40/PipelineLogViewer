<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:PipelineLogViewer.ViewModels"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="PipelineLogViewer.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="Pipeline Log Viewer" Width="800" Height="600"
        FontFamily="Consolas, Monaco, monospace"
        FontSize="12">

    <Window.DataContext>
        <vm:MainWindowViewModel />
    </Window.DataContext>

    <StackPanel Margin="10">
        <TextBlock Text="Paste log data below:" Margin="0,0,0,5" />
        <TextBox Text="{Binding InputText}" AcceptsReturn="True" Height="200" />
        <Button Command="{Binding ParseCommand}" Content="Parse Logs" Margin="0,5" />
        <TextBlock Text="Output:" Margin="0,10,0,5" />
        <ScrollViewer Height="300">
            <TextBlock Text="{Binding OutputText}" TextWrapping="Wrap" FontFamily="Consolas, Monaco, monospace" />
        </ScrollViewer>
    </StackPanel>
</Window>