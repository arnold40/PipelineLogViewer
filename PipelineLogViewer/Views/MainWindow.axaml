<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:PipelineLogViewer.ViewModels"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="PipelineLogViewer.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="Pipeline Log Viewer" Width="800" Height="600"
        FontFamily="Consolas, Monaco, monospace"
        FontSize="12">

    <Window.DataContext>
        <vm:MainWindowViewModel />
    </Window.DataContext>

    <ScrollViewer>
        <Grid Margin="10" RowDefinitions="*,*" RowSpacing="10">
            
            <!-- Input Section -->
            <Border Grid.Row="0" Background="White" BorderBrush="#CCC" BorderThickness="1" CornerRadius="8" Padding="10">
                <Grid RowDefinitions="Auto,10,*,10,Auto" MinHeight="200">
                    <Border Grid.Row="0" Background="#E9ECEF" CornerRadius="4">
                        <TextBlock Text="Paste Log Data" FontWeight="Bold" FontSize="14"  Padding="6"/>
                    </Border>
                    <TextBox Grid.Row="2"
                             Text="{Binding InputText}"
                             AcceptsReturn="True"
                             TextWrapping="Wrap"
                             MinHeight="150"
                             FontFamily="Consolas, Monaco, monospace"
                             Background="#F1F3F5"
                             BorderBrush="#CED4DA"
                             Margin="0"
                             ScrollViewer.VerticalScrollBarVisibility="Auto"/>
                    <Button Grid.Row="4"
                            Command="{Binding ParseCommand}"
                            Content="Parse Logs"
                            HorizontalAlignment="Right"
                            Background="#0D6EFD"
                            Foreground="White"
                            Padding="10, 6"
                            BorderBrush="#0B5ED7"
                            CornerRadius="4"/>
                </Grid>
            </Border>

            <!-- Output Section -->
            <Border Grid.Row="1" Background="White" BorderBrush="#CCC" BorderThickness="1" CornerRadius="8" Padding="10">
                <Grid RowDefinitions="Auto,10,*" MinHeight="200">
                    <Border Grid.Row="0" Background="#D0EBFF" CornerRadius="4">
                        <TextBlock Text="Parsed Output" FontWeight="Bold" FontSize="14" Padding="6"/>
                    </Border>
                    <TextBox Grid.Row="2"
                             Text="{Binding OutputText}"
                             AcceptsReturn="True"
                             TextWrapping="Wrap"
                             IsReadOnly="True"
                             MinHeight="150"
                             FontFamily="Consolas, Monaco, monospace"
                             Background="#E9ECEF"
                             BorderBrush="#CED4DA"
                             Margin="0"
                             ScrollViewer.VerticalScrollBarVisibility="Auto"/>
                </Grid>
            </Border>
        </Grid>
    </ScrollViewer>

</Window>